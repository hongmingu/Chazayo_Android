<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbarAll"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:elevation="4dp"
    android:outlineProvider="none"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="horizontal">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/toolbarHome"
            android:background="@drawable/bg_gold"


            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_home_24px"
                />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:background="@drawable/bg_gold"

            android:id="@+id/toolbarMessage"


            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_local_post_office_24px"
                />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:background="@drawable/bg_gold"

            android:id="@+id/toolbarNoti"


            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_notifications_24px" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:background="@drawable/bg_gold"


            android:id="@+id/toolbarMy"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_person_24px" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.Toolbar>