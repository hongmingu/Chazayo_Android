<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PhoneAuthActivity">


    <include layout="@layout/toolbar_logo"></include>

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"></Space>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="288dp"
        android:layout_height="48dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#000000"
            android:lineSpacingExtra="8sp"
            android:text="회원 가입"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"></Space>
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_gravity="center_horizontal"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#060606"
            android:lineSpacingExtra="7sp"
            android:text="전화번호"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="전화번호입력"
                android:backgroundTint="@color/colorTransparent">

            </androidx.appcompat.widget.AppCompatEditText>
            <Space
                android:layout_width="4dp"
                android:layout_height="match_parent"></Space>
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gold">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="4sp"
                    android:text="인증"
                    />

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"></Space>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_gravity="center_horizontal"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#060606"
            android:lineSpacingExtra="7sp"
            android:text="인증번호 입력"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="인증번호"
                android:backgroundTint="@color/colorTransparent">

            </androidx.appcompat.widget.AppCompatEditText>
            <Space
                android:layout_width="4dp"
                android:layout_height="match_parent"></Space>
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gold">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="4sp"
                    android:text="인증"
                    />

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"></Space>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_gravity="center_horizontal"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#060606"
            android:lineSpacingExtra="7sp"
            android:text="비밀번호"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="비밀번호"
                android:backgroundTint="@color/colorTransparent">

            </androidx.appcompat.widget.AppCompatEditText>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"></Space>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_gravity="center_horizontal"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#060606"
            android:lineSpacingExtra="7sp"
            android:text="비밀번호 확인"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="비밀번호 확인"
                android:backgroundTint="@color/colorTransparent">

            </androidx.appcompat.widget.AppCompatEditText>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <Space
        android:layout_width="132dp"
        android:layout_height="72dp"></Space>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_gravity="center"
        android:id="@+id/phoneAuthNextButton"
        android:layout_width="132dp"

        android:layout_height="72dp"
        android:background="@drawable/bg_gold_radius">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#060606"
            android:lineSpacingExtra="8sp"
            android:text="다음"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.appcompat.widget.LinearLayoutCompat>